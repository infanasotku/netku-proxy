      - events: ["cleanup"]
        command: bash
        args:
          - -c
          - |
            set -e
            rm -f charts/events/temp-secrets.yaml
            rm -f charts/events/Chart.lock
            rm -rf charts/events/charts

  - name: outbox
    namespace: {{ .Environment.Values.namespace }}
